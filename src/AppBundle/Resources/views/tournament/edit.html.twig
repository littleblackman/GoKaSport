{% extends 'base.html.twig' %}

{% block body %}
  <h1 style="font-size: 1.6em">{{mode}}</h1>


  {{ form_start(form,  {'attr': {'id': 'edit-tournament'}}) }}
    <div class="flex-container--column">
        <br/>
        <div>
          {{ form_widget(form.name)}}
          {{ form_errors(form.name)}}
        </div>
        <br/>
        <div>
          {{ form_label(form.description)}}
          {{ form_widget(form.description)}}
          {{ form_errors(form.description)}}
        </div>
        <br/>
        <div>
          <h2 style="text-align: center">{{ form_label(form.dateStart)}}</h2>
          {{ form_widget(form.dateStart)}}
          {{ form_errors(form.dateStart)}}
        </div>
        <br/>
        <div>
          {{ form_widget(form.address)}}
          {{ form_errors(form.address)}}
        </div>
        <br/>
        <div>
            {{ form_label(form.postalCode)}}
            {{ form_widget(form.postalCode)}}
            {{ form_errors(form.postalCode)}}

        </div>
        <br/>
        <div>
            {{ form_label(form.city)}}
            {{ form_widget(form.city)}}
            {{ form_errors(form.city)}}
        </div>

        <br/>
        <div class="group">
            <div>
              {{ form_label(form.isOpen)}}
              {{ form_widget(form.isOpen)}}
            </div>
            <div>
              {{ form_label(form.isInit)}}
              {{ form_widget(form.isInit)}}
            </div>
            <div>
              {{ form_label(form.isValided)}}
              {{ form_widget(form.isValided)}}
            </div>
        </div>

        <div>
          <br/>
          <input type="submit" class="btn--inverse" style="padding: 20px" value="{{mode}}" />
        </div>

    {{ form_end(form)}}

    {% if tournamentId != 0 %}
      <br/><br/>
      <div>
          <a href="{{ path('resetTournament', {'tournamentId' : tournamentId, 'type' : 'matchs'})}}" class="submitButton btn fullWidth">
            RESET MATCHS
          </a>
          <br/><br/>
          <a href="{{ path('resetTournament', {'tournamentId' : tournamentId, 'type' : 'groups'})}}" class="submitButton btn fullWidth">
            RESET GROUPS
          </a>
          <br/><br/>
          <a href="{{ path('resetTournament', {'tournamentId' : tournamentId, 'type' : 'teams'})}}" class=" submitButton btn fullWidth">
            RESET TEAMS
          </a>
      </div>
    {% endif %}


{% endblock %}
